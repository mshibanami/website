<!DOCTYPE html>
<html>

<head>
  <noscript>
    <meta http-equiv="refresh" content="0; url=<%= @config[:default_language] %>/">
  </noscript>
  <script>
    var lang = (window.navigator.userLanguage || window.navigator.language)
      .replace(/[_-].*/, '') // Country translation not supported
      .toLowerCase();

    if (lang in <%= @config[:supported_languages] %>) {
      location.href = lang + '/';
    }
    else {
      location.href = '<%= @config[:default_language] %>/';
    }
  </script>
</head>

</html>
